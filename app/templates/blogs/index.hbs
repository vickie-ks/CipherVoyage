<h2 class="flex-center">My Thoughts on Security</h2>
<p class="flex-center m-30">Explore essential cybersecurity concepts, tools, and expert advice.</p>
{{#if this.model.length}}
  <ul>
    {{#each this.model as |blog|}}
      <ArticleItem @article={{blog}} @transitionTo="blogs.blog" />
    {{/each}}
  </ul>
{{else}}
  <div class="empty-message">No articles are available right now.</div>
{{/if}}
