<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
  {{#each this.model as |site|}}
    <div class="col">
      <div class="card h-100">
        <div class="card-body">
          <h4 class="card-title">{{site.title}}</h4>
          <p class="card-text">{{site.desc}}</p>
        </div>
        <div class="card-footer">
          <LinkTo
            class="ember-view btn btn-dark"
            @route={{site.link}}
          >{{site.seeMore}}</LinkTo>
        </div>
      </div>
    </div>
  {{/each}}
